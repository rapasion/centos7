# SetHandler "proxy:unix:/var/run/php-fcgi-vhostname-php7-fcgi-0.sock|fcgi://localhost"
# Added ProxyTimeout to bypass Apache Timeout
<IfModule proxy_fcgi_module>
    ProxyTimeout 600
        <FilesMatch \.php$>
            SetHandler "proxy:unix:{{ php_fpm_sockdir }}/php-fcgi-vhostname-php-fcgi-0.sock|fcgi://localhost"
        </FilesMatch>
</IfModule>

{% if deploy_mod_security == 'true' %}
# PCRE limits exceeded (-8): (null) fix
SecPcreMatchLimit 150000
SecPcreMatchLimitRecursion 150000
{% endif %}

CoreDumpDirectory   "{{ gml_source_path }}/logs/apache"

# TODO: remove comment when reverse proxy SNI issue is resolved
#SSLStrictSNIVHostCheck On

# Section 10 CIS Harden
LimitRequestline 512
LimitRequestFields 100
LimitRequestFieldsize 1024
LimitRequestBody 10240000

# Section 5.10
<FilesMatch "^\.ht">
    Require all denied
</FilesMatch>

# Section 5.11
#<FilesMatch "^.*$">
#    Require all denied
#</FilesMatch>

<FilesMatch "^.*\.(css|html?|js|pdf|txt|xml|xsl|gif|ico|jpe?g|png|doc|xls|pps|xlsx)$">
    Require all granted
</FilesMatch>

<IfModule security2_module>
    Include {{ gml_source_modsecurity_conf_path }}/crs/crs-setup.conf
    Include {{ gml_source_modsecurity_conf_path }}/crs/rules/*.conf
    Include {{ gml_source_modsecurity_conf_path }}/*.conf
</IfModule>